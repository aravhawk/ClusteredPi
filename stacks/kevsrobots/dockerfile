FROM alpine:latest AS getfiles
# install git
RUN echo 'grabing hostname'
RUN echo 'hostname='$HOSTNAME >> _config.yml
RUN cat _config.yml
RUN echo "installing git"
RUN apk --no-cache add git
RUN apk add --virtual build-dependencies build-base
RUN apk add ruby-dev
RUN echo "making /src"
RUN mkdir /src
WORKDIR /src
RUN echo "cloning kevsrobots"
RUN git clone https://www.github.com/kevinmcaleer/kevsrobots.com --recurse-submodules --remote-submodules

RUN echo "Cloned kevsrobots.com"
RUN ls -la
ENV BUILD_PACKAGES bash curl curl-dev ruby-dev build-base
ENV RUBY_PACKAGES \
  ruby ruby-io-console ruby-irb \
  ruby-json ruby-etc ruby-bigdecimal ruby-rdoc \
  libffi-dev zlib-dev
ENV TERM=linux
ENV PS1 "\n\n>> ruby \W \$ "

RUN apk --no-cache add $BUILD_PACKAGES $RUBY_PACKAGES

# FROM ruby as jekyll
# RUN apt-get update \ 
#    && apt-get install -y \
#    python3-pygments \
#    && apt-get clean \
#    && rm -rf /var/lib/apt/lists/*


RUN gem install \
  # github-pages \
  jekyll \
  jekyll-redirect-from \
  kramdown \
  rdiscount \
  rouge

# COPY --from=getfiles /src/kevsrobots.com/web /src
COPY /src/kevsrobots.com/web /src
WORKDIR /src
RUN mkdir -p /src/_site
# COPY --from=youtube /yt/youtube/youtube.yaml /src/_data/youtube.yaml
RUN jekyll build 

FROM nginx
COPY --from=getfiles /src/kevsrobots.com/stacks/kevsrobots/nginx.conf /etc/nginx/nginx.conf
# COPY --from=jekyll /src/_site /www/data
COPY --from=getfiles /src/_site /www/data

# RUN chown -R nginx:nginx /www/data
# RUN chmod -R 755 /www/data/*
RUN echo 'hostname='$HOSTNAME >> /www/data/_config.yml
